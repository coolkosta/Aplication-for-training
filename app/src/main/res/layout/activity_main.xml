<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonForNewActivityWithTwoFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Activity with two fragments"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonForNewActivityWithUnlimitedFrgment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Activity with unlimited fragments"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/buttonForNewActivityWithTwoFragment"
        app:layout_constraintStart_toStartOf="@id/buttonForNewActivityWithTwoFragment"
        app:layout_constraintTop_toBottomOf="@id/buttonForNewActivityWithTwoFragment" />


</androidx.constraintlayout.widget.ConstraintLayout>